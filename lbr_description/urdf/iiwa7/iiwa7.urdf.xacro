<?xml version="1.0"?>

<!-- top level -->
<robot name="iiwa7" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- include the lbr iiwa macro -->
    <xacro:include filename="$(find lbr_description)/urdf/iiwa7/iiwa7_description.urdf.xacro" />

    <xacro:arg name="base_frame" default="world" />
    <xacro:arg name="robot_name" default="lbr" />
    <xacro:arg name="port_id" default="30200" />
    <xacro:arg name="sim" default="true" />

    <!-- fixed to base_frame -->
    <link name="$(arg base_frame)" />

    <!--joint
        between {base_frame} and link_0-->
    <joint name="$(arg base_frame)_joint" type="fixed">
        <parent link="$(arg base_frame)" />
        <child link="link_0" />
    </joint>


    <!-- iiwa -->
    <xacro:iiwa7 robot_name="$(arg robot_name)" port_id="$(arg port_id)" sim="$(arg sim)" />
</robot>